<div class="container">
  <div class="col-12 mt-5">
    <h1> {{model.title}} </h1>
    <div class="row">
      <div class="col-12 mt-2">
        <h4 class="mb-0 text-muted"> {{moment-format event.startDate "MMM/DD"}} - {{moment-format event.endDate "MMM/DD"}} </h4>
      </div>
      <div class="col-8 mt-5"> 
        <div class="card event-description p-5">
          {{simple-mde-preview model.description}}
        </div>
      </div>

      {{#if model.link}}
        <div class="col-12">
          <a class="btn btn-lg btn-light" href={{model.link}} target="_blank" rel="noopener"> Event website </a>
        </div>
      {{/if}}
    </div>
  </div>
</div>

