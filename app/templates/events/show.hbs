<div class="container">
  <div class="col-12 mt-4">
    <div class="row">
      <div class="col">
        {{#link-to "events"}} &laquo; Events {{/link-to}}
        
        <span> 
          <h1> {{model.title}} </h1>
          <h4 class="mb-0 text-muted"> ({{moment-format event.startDate "MMM/DD"}} - {{moment-format event.endDate "MMM/DD"}}) </h4> 
        </span>
      </div>

     {{#if model.link}}
        <div class="col">
          <a class="btn btn-lg btn-danger float-right mt-5" href={{model.link}} target="_blank" rel="noopener"> Event website </a>
        </div>
      {{/if}}

    </div>
    <hr>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10 mt-5"> 
        <div class="event-description">
          {{simple-mde-preview model.description}}
        </div>
      </div>

     
    </div>
  </div>
</div>

