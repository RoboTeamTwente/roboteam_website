<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <h1> Articles </h1>
    </div>
  </div>
	<div class="row">
    {{#each model as |article|}}
    	<div class="col-12">
        {{#link-to "news.show" article}}
          <div class="border-0 border-radius-0 mb-5 text-dark">
            <div class="row">
              <div class="col-4">
                <img class="max-width" src={{article.imageSrc}} alt={{article.title}}>
              </div>
              <div class="col">
                <h5 class="card-title"> {{article.title}} </h5> 
                <p class="card-text mt-2 d-none d-md-block"> {{remove-markdown article.contentShortened}} </p>
              </div>
            </div>
          
          </div>
        {{/link-to}}
      </div>
    {{/each}}
  </div>
</div>