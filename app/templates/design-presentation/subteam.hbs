<div class="gradient"> </div>

{{!-- preload all header backgrounds --}}
  <img class="header-image {{if (eq header.id selectedHeader.id) 'visible'}}" src={{model.subteam.imageSrc}} alt={{model.subteam.name}}>

{{!-- Title and subtitle --}}
<div class="container frontpage-header">
  <div class="row">
    <div class="col-12">
      <h1 class="header-image-title text-white mt-5 pt-5">
        {{model.subteam.name}} <br>
      </h1>
      <span class="header-image-title subtitle text-white"> 
        {{simple-mde-preview model.subteam.description}}
      </span>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-12 mt-5">
    {{#each model.designitems as |designitem index|}}
      <div class="row mt-5 mb-5">        
        <div class="col-12 col-md-5 order-6">
          <img class="max-width" alt={{designitem.title}} src={{designitem.imageSrc}}>
        </div>
        <div class="col-12 col-md-7 mt-5 {{if (is-even index) 'order-1' 'order-12'}}">
          <h3> {{designitem.title}} </h3>
          {{simple-mde-preview designitem.content}}
        </div>
      </div>
    {{/each}}
  </div>

<hr>

  <h2 class="mt-5 mb-5 text-center"> Watch the other subteams as well! </h2>
      <div class="col-12 row mb-5"> 
          {{#each model.otherSubteams as |subteam|}}
            <div class="col-12 col-md-4">
              <LinkTo @route="design-presentation.subteam" @query={{hash subteam=subteam.id}}>
                <img class="max-width cover" height="200" src={{subteam.imageSrc}} alt={{subteam.title}}>
                <h4 class="text-dark mt-2">
                  {{subteam.name}}
                </h4>
              </LinkTo>
            </div>
          {{/each}}
        </div>
</div>
