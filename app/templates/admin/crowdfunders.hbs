{{admin-nav}}

<div class="container">
  <div class="card mt-5">
    <form {{action "addCrowdfunder" on="submit"}}>
      <div class="form-group pl-4 pr-4 pt-3">
        <div class="row">
          {{input type="text" class="form-control col m-2" placeholder="John AppleSeed" value=name}}
          {{input type="number" class="form-control col-3 m-2" placeholder="2019" value=year}}
          <button type="submit" class="btn btn-danger col-3 m-2"> Add crowdfunder</button>
  	    </div>
      </div>
    </form>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"> <a {{action "sortBy" "name"}}> Name </a> </th>
          <th scope="col"> <a {{action "sortBy" "year"}}> Year </a> </th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>

      	{{#each model as |crowdfunder|}}
    	    <tr>
    	      <td scope="row">{{crowdfunder.name}}</td>
    	      <td scope="row">{{crowdfunder.year}}</td>
    	      <td> <a class="link text-danger" {{action "removeCrowdfunder" crowdfunder.id}}> Remove </a> </td>
    	    </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>