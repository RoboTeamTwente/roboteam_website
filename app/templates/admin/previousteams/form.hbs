<div class="container">
  <div class="card mt-5">
    <div class="card-header">
        <strong> {{if model.isNew "Add new previous team" "Edit previousteam"}} </strong>
    </div>
    <form {{action "saveModelWithImage" on="submit"}}>
      <div class="form-group pl-4 pr-4 pt-3">
        <div class="row">

          {{!-- Show error message if something went wrong --}}
          {{#if error}}
            <div class="alert alert-danger"> 
              <b> Oh oh... </b> <br> 
              {{error}}
            </div>
          {{/if}}

          {{!-- Article title --}}
          <div class="col-12"> 
            <label>
              <span class="text"> Team title * </span>
              {{input type="text" class="form-control mb-2" placeholder="e.g. Team 2018/2019" value=model.name}} 
            </label>
          </div>

          {{!-- year of start --}}
          <div class="col-12"> 
            <label>
              <span class="text"> Starting year of this team * </span>
              {{input type="number" class="form-control mb-2" placeholder="e.g. 2018" value=model.yearOfStart}} 
            </label>
          </div>
          
    
          {{!-- Image upload --}}
          <div class="col-6"> 
            <label>
              <span class="text"> Image * </span> <br>
              {{x-file-input class="btn btn-danger" multiple=false name="false" action=(action "didSelectImage") accept="image/*" alt="Upload Image"}}
              <img id="output" class="img-sample" alt="preview" src={{model.imageSrc}} hidden={{shouldHideImage}}>
            </label>
          </div>

          <div class="col-12"> 
            <label>
              <span class="text"> Content *</span>
            </label>
            {{simple-mde class="border border-radius-2 p-0" value=model.content change=(action (mut model.content))}}
          </div>

          <div class="col-12"> 
            <button type="submit" class="btn btn-danger mb-2 mt-2 d-inline"> {{if model.isNew "Add previous team" "Update previous team"}} </button>
            {{#link-to "admin.previousteams"}}
              <button class="btn btn-default mb-2 mt-2 d-inline"> Cancel </button>
            {{/link-to}}
          </div>
        </div>
      </div>            
    </form>
  </div>
</div>